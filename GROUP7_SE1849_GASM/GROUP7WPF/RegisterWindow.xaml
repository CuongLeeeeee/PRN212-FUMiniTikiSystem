<Window x:Class="GROUP7WPF.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GROUP7WPF"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="450" Width="800">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Name:"/>
            <TextBox x:Name="txtName"/>

            <TextBlock Text="Email:" Margin="0,10,0,0"/>
            <TextBox x:Name="txtEmail"/>

            <TextBlock Text="Password:" Margin="0,10,0,0"/>
            <PasswordBox x:Name="txtPassword"/>

            <Button Content="Register" Margin="0,20,0,0" Click="Register_Click"/>
        </StackPanel>
    </Grid>
</Window>
