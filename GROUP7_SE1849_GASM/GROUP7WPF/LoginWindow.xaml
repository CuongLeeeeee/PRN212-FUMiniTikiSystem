<Window x:Class="GROUP7WPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GROUP7WPF"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Email -->
        <StackPanel Grid.Row="0" Margin="0 0 0 10">
            <TextBlock Text="Email:"/>
            <TextBox x:Name="txtEmail" Width="250"/>
        </StackPanel>

        <!-- Password -->
        <StackPanel Grid.Row="1" Margin="0 0 0 10">
            <TextBlock Text="Password:"/>
            <PasswordBox x:Name="txtPassword" Width="250"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Login" Width="80" Margin="5" Click="Login_Click"/>
            <Button Content="Register" Width="80" Margin="5" Click="Register_Click"/>
        </StackPanel>
    </Grid>
</Window>
